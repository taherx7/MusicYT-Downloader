{
  "name": "musicyt-downloader",
  "version": "1.0.0",
  "description": "Desktop app to download YouTube videos/audio with metadata and cover art",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "youtube",
    "downloader",
    "electron",
    "mp3",
    "mp4",
    "music",
    "metadata"
  ],
  "author": "taherx7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/taherx7/MusicYT-Downloader"
  },
  "bugs": {
    "url": "https://github.com/taherx7/MusicYT-Downloader/issues"
  },
  "homepage": "https://github.com/taherx7/MusicYT-Downloader#readme",
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-id3": "^0.2.9",
    "yt-dlp-exec": "^1.0.2"
  },
  "build": {
    "appId": "com.taherx7.musicyt-downloader",
    "productName": "MusicYT Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/@electron/get/**/*"
    ],
    "asarUnpack": [
      "node_modules/yt-dlp-exec/**/*",
      "node_modules/@ffmpeg-installer/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "image.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "image.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "image.png"
    }
  }
}